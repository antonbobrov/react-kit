{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "jsx": "react",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@types": ["./src/types"]
    }
  },
  "include": ["src", ".storybook", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "lib"]
}
